<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Hey Host! Here are your homes:
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-300">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-bold text-gray-800 mb-2"><%= home.houseName %></h3>
              <p class="text-gray-600 mb-2"><span class="font-semibold">Location:</span> <%= home.location %></p>
              <p class="text-gray-600 mb-2"><span class="font-semibold">Rating:</span> <%= home.rating %></p>
              <p class="text-red-500 text-lg font-bold"><%= home.price %></p>
              <button class="bg-blue-500 p-2 rounded-lg">Edit</button>
              <button class="bg-red-500 p-2 rounded-lg">Delete</button>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
